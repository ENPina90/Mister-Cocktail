<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <% @cocktail.photos.each do |photo| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path photo.key, height: 300, width: 400, crop: :fill %>')">
          <h1><%= @cocktail.name %></h1>
         <% end %>
        </div>

       <div class="list-group">
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.ingredient.name %><%= dose.description %>
            <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i>
            <% end %>
          </li>
        <% end %>
      </div>
      <div class="col-sm-12 col-md-6">
        <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
      </div>
      <%= link_to "See all cocktails", cocktails_path %>
    </div>
  </div>
</div>
