<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1536935338788-846bb9981813?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1586&q=80');">
  <div class="banner-content">
    <h1>Mr Cocktail Cocktails</h1>
    <p>Drink up!</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
          <div class="card-category mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photos.first.key, height: 180, width: 240, crop: :fill %>')">
            <div class="card-description">
              <h2><%= "the #{cocktail.name.capitalize}" %></h2>
            </div>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
      </div>
    <% end %>
  </div>
</div>
